<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Top menu item -->
        <menuitem id="tutorat_root"
            name="Tutorat"
            sequence="10"/>
        <menuitem id="tutorat_demandes_root"
            name="Demandes tutorat"
            parent="tutorat_root"
            sequence="10"/>
        <menuitem id="tutorat_sessions_root"
            name="Demandes turtorat"
            action="demande_template_action"
            parent="tutorat_demandes_root"
            sequence="10"/>
            
        <record id="demandes_tree" model="ir.ui.view">
            <field name="name">tutorat.demande.tree</field>
            <field name="model">tutorat.demande</field>
             <field name="arch" type="xml">
                <tree>
                  <field name="demande_no"/>
                  <field name=" titre"/>
                  <field name="date"/>
                </tree>
            </field>
        </record>
        <record id="demande_template_action" model="ir.actions.act_window">
            <field name="name">Demandes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tutorat.demande</field>
            <field name="view_mode">kanban,tree,form</field>
             <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Creer une nouvelle demande de tutorat 
                </p>
            </field>
        </record>
    <record id="increment_your_field_sequence" model="ir.sequence">
    <field name="name">Field Incrementation</field>
    <field name="code">increment_your_field</field>
    <field name="prefix"></field>
    <field name="padding">3</field>
    <field name="company_id" eval="False"/>
</record>
</odoo>
        